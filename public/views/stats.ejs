 <center><u style="color:cyan"><h1 style="color:white">This week</h1></u></center>
   
<div style="text-align:center; margin: 20px;">
    <button onclick="addStudent()">Add Student</button>
</div>

<table class="graphsTable" id="studentTable"></table>

<script>
let studentCount = 0;

function addStudent() {
    studentCount++;
    const studentLetter = String.fromCharCode(64 + studentCount); // A, B, C, D...

    // Create a new table cell (student)
    const newCell = document.createElement("td");

    // Add the structure for the student (with editable name)
    newCell.innerHTML = `
        <div class="box-images">
            <img src="/images/Minutes.png" alt="Student Icon" style="width: 300px; height: auto;">
        </div>
        <div class="container">
            <!-- Editable student name -->
            <input type="text" id="studentName${studentCount}" value="Student ${studentLetter}" class="student-name" 
                oninput="updateStudentName(${studentCount})" />
            <a href="/moreStats" class="gtext">Click here to see timer</a>
        </div>
    `;

    const table = document.getElementById("studentTable");

    // If there are no rows or the last row already has 2 cells, create a new row
    if (table.rows.length == 0 || table.rows[table.rows.length - 1].cells.length == 2) {
        const newRow = table.insertRow();
        newRow.appendChild(newCell);
    } else {
        table.rows[table.rows.length - 1].appendChild(newCell);
    }
}

// Function to handle live updates to the student name
function updateStudentName(studentId) {
    const inputElement = document.getElementById(`studentName${studentId}`);
    const updatedName = inputElement.value;
    
    // You can do additional things here (e.g., saving the name to a database, etc.)
    console.log(`Updated name for Student ${studentId}: ${updatedName}`);
}
</script>




